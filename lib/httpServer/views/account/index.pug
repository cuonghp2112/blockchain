extends ../layout.pug

block content
    section.hero.is-medium.is-primary.is-bold
        .hero-body
            .container
                .tile.is-ancestor
                    .tile.is-7.is-vertical.is-parent
                        .tile.is-child.notification.is-warning
                            p.title Wallet ID
                            code.tooltip(id='walletid') #{wallet.id}
                                span.tooltiptext #{wallet.id}
                        .tile.is-child.notification.is-danger
                            p.title Address
                            code.tooltip(id='address') #{wallet.addresses}
                                span.tooltiptext #{wallet.addresses}
                    .tile.is-parent
                        .tile.is-child.notification.is-success
                            .level
                                .tile.is-ancestor
                                    .tile.is-20.is-vertical.is-parent
                                        .tile.is-child.box
                                            .column.has-text-centered
                                                p.title(style='color:grey') Account Balance
                                        .tile.is-child.box
                                            .column.has-text-centered
                                                p.title(style='color:grey') #{balance}
    section.hero.is-light.is-bold
        .hero-body
            .container
                .tile.is-parent
                    article.tile.is-child.notification.is-success
                        .content
                            p.title Transfers
                            .content
                                form(method='POST' action='/submit-transaction')
                                    .field
                                        label.label Wallet ID
                                        .control
                                            input.input(name='walletid' type='text' placeholder='eg b826513cb97313e244921d277b470f5060a10d17bbf6dd37fca9341bd511a348')
                                    .field
                                        label.label Receiving address
                                        .control
                                            input.input(name='toAddress' type='text' placeholder='eg b826513cb97313e244921d277b470f5060a10d17bbf6dd37fca9341bd511a348')
                                    .field
                                        label.label Password
                                        .control
                                            input.input.is-success(name='pass' type='text' placeholder='eg nam 1 2 3 4')
                                    .field
                                        label.label Amount
                                        .control
                                            input.input.is-success(name='amount' type='text' placeholder='eg 50000000')
                                    input.button.is-info(type="submit")
    section.hero.is-primary
        .hero-body
            .container
                .tile.is-parent
                    article.tile.is-child.notification.is-danger
                        p.title Transaction Sent
                        p.subtitle List of transactions
                        .content
                            table.table
                                thead
                                    tr
                                        th Transaction ID
                                        th Index
                                        th Amount
                                        th To Address
                                tfoot
                                    tr
                                        th Transaction ID
                                        th Index
                                        th Amount
                                        th To Address
                                tbody
                                    each transaction in outputTransactions                    
                                        tr(onClick=`toggle_visibility( '${transaction.transaction}' )`, style="cursor: pointer")
                                            th
                                                span.tooltip #{formatters.hash(transaction.transaction)}
                                                    span.tooltiptext #{transaction.transaction}
                                            td
                                                span.tooltip #{transaction.index}
                                                    span.tooltiptext #{transaction.index}
                                            td #{transaction.amount}
                                            td 
                                                span.tooltip #{formatters.hash(transaction.address)}
                                                    span.tooltiptext #{transaction.address}
