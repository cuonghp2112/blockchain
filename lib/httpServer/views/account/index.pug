                                        //-                                 span.tooltiptext #{input.address}
                                        //-                             | From transaction
                                        //-                             code.tooltip #{formatters.hash(input.transaction)} : #{input.index}
                                        //-                                 span.tooltiptext #{input.transaction}                                                    
                                        //-                             | Amount
                                        //-                             code #{formatters.amount(input.amount)}
                                        //-                             | Signature
                                        //-                             code #{formatters.hash(input.signature)}
