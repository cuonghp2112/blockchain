doctype html
html(lang="en").has-navbar-fixed-top
    head
        title Naivecoin - #{pageTitle}
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.2/css/bulma.min.css")        
        script(src="https://use.fontawesome.com/releases/v5.0.0/js/all.js", defer)        
        style(type='text/css').
            /* Tooltip container */
            .tooltip {
                position: relative;                                
            }

            /* Tooltip text */
            .tooltip .tooltiptext {
                visibility: hidden;                
                background-color: black;
                color: #fff;
                text-align: center;
                padding: 5px;
                border-radius: 6px;
                top: -5px;
                left: 105%;   
                word-break: normal;
            
                /* Position the tooltip text - see examples below! */
                position: absolute;
                z-index: 1;
            }

            /* Show the tooltip text when you mouse over the tooltip container */
            .tooltip:hover .tooltiptext {
                visibility: visible;
            }
    body
        nav.navbar.is-fixed-top.is-dark
            .container
                .navbar-menu.is-active
                    .navbar-brand
                        a.navbar-item.title.is-2.has-text-white(href="/home", class=`${pageTitle=='Home' ? 'is-active' : ''}`) TTCDcoin
                    .navbar-end
                        a.navbar-item(href="/wallet/login", class=`${pageTitle=='Login'? 'is-active':''}`) Login

        block content
            section.hero.is-fullheight.is-primary.is-bold
                .hero-body
                    .container
                        center
                            p.title.is-1(style='color:black') Sign Up
                        form(action="/wallets" method="POST")
                            .field
                                label.label Name
                                    p.control.has-icons-left.has-icons-right
                                        input.input(type='name' placeholder='User name' name='name')
                                        span.icon.is-small.is-left
                                            i.fas.fa-envelope
                                        span.icon.is-small.is-right
                                            i.fas.fa-check
                            .field
                                label.label Password
                                    p.control.has-icons-left
                                        input.input(type='password' placeholder='eg: Dung 1 2 3 4' name='password')
                                        span.icon.is-small.is-left
                                            i.fas.fa-lock
                            input.button.is-warning(type="submit")